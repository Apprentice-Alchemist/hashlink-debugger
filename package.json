{
	"name": "haxe-hl",
	"displayName": "HashLink Debug Launcher",
	"version": "0.0.1",
	"publisher": "haxe-foundation",
	"license": "MIT",
	"description": "Debugger for HashLink",
	"author": {
		"name": "haxe-foundation"
	},
	"engines": {
		"vscode": "^1.4.0"
	},
	"icon": "images/icon.svg",
	"categories": [
		"Debuggers"
	],
	"private": true,
	"dependencies": {
		"vscode-debugprotocol": "1.24.0",
		"vscode-debugadapter": "1.24.0"
	},
	"devDependencies": {
	},
	"scripts": {
	},
	"contributes": {
		"debuggers": [
			{
				"type": "hl",
				"label": "HashLink",
				"enableBreakpointsFor": {
					"languageIds": [
						"haxe"
					]
				},
				"program": "./hl_adapter.js",
				"runtime": "node",
				"configurationAttributes": {
					"launch": {
						"required": [ "program" ],
						"properties": {
							"request" : {
								"type": "string",
								"description": "launch",
								"default" : "launch"
							},
							"hxml": {
								"type": "string",
								"description": "Path to the .hxml file.",
								"default": "build.hxml"
							},
							"cwd": {
								"type": "string",
								"description": "Working directory",
								"default": "${workspaceRoot}"
							},
							"args": {
								"description": "Program arguments.",
								"type": "array",
								"default": [],
								"items": {
									"description": "Command-line arguments passed to HL program.",
									"type": "array",
									"items": {
										"type": "string"
									}
								}
							}
						}
					}
				},
				"initialConfigurations": [
					{
						"name": "HashLink",
						"request":"launch",
						"type": "hl",
						"hxml": "build.hxml",
						"cwd":"${workspaceRoot}",
						"preLaunchTask": "Build"
					}
				]
			}
		]
	}
}